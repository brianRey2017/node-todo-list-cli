{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",

    /* Module Resolution Options */
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@lib/*": ["lib/*"],
      "@models/*": ["models/*"]
    },
    "rootDir": "./src",

    /* Advanced Options */
    "skipLibCheck": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "lib": ["es2015"]
}
